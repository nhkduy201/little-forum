extends ../layout

block content
  .d-flex.justify-content-between.align-items-center.pt-1
    h1 Users
    form.d-flex.mb-0(action="/users/search", method="GET")
      input.mr-2(id="search", type="text", name="search", value=value ? value : '', class="form-control border border-dark")
      button(type="submit", class="btn btn-dark border border-light") Search
  ul.list-group
    each user in users
      li.list-group-item.px-0.py-2.border-0
        .card.text-dark.border.border-dark
          .card-body
            h5.card-title Name: #{user.name}
            p.card-text Age: #{user.age}
            p.card-text Phone: #{user.phone}
            a.btn.btn-dark.rounded-pill(href="/users/view/" + user.id) View detail
  if age
    script.
      var age = document.getElementById("age");
      age.value = #{age};