extends ../layout

block content
  nav.mt-3(aria-label='...')
  ul.pagination
    if position == "top"
      li.page-item.disabled
        a.page-link(href="#", tabindex='-1', aria-disabled='true') Previous
    else
      li.page-item
        a.page-link(href='/product/' + (currentPage - 1)) Previous
      li.page-item
        a.page-link(href='/product/' + (currentPage - 1)) #{currentPage - 1}
    li.page-item.active(aria-current='page')
      a.page-link(href="#")
        | #{currentPage}
        span.sr-only (current)
    if position == "bot"
      li.page-item.disabled
        a.page-link(href='#', tabindex='-1', aria-disabled='true') Next
    else
      li.page-item
      a.page-link(href='/product/' + (currentPage + 1)) #{currentPage + 1}
      li.page-item
        a.page-link(href='/product/' + (currentPage + 1)) Next
  .row
    each product in products
      .col-sm-6.col-lg-4.col-xl-3.my-3
        .card
          img.card-img-top(src = product.image, alt = product.name)
          .card-body
            h5.card-title #{product.name}
            p.card-text #{product.description}
            a.btn.btn-primary(href='#') #{product.price}